{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@src": ["./src"],
      "@models": ["./src/models"],
      "@state": ["./src/state"],
      "@utils": ["./src/utils"],
      "@services": ["./src/services"],
      "@hooks": ["./src/hooks"]
    }
  },
  "include": ["src/**/*"]
}
