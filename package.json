{
  "name": "librarian",
  "productName": "librarian",
  "version": "2.2.0",
  "description": "Organizes files in your system automatically",
  "main": ".webpack/main",
  "build": {
    "appId": "com.vidal-tomas.librarian"
  },
  "packagerConfig": {
    "icon": "assets/icons/256x256.ico"
  },
  "windowsStoreConfig": {
    "packageName": "Librarian",
    "packageDisplayName": "Librarian",
    "packageDescription": "Organize your files automagically",
    "iconUrl": "https://assets/icons/256x256.ico",
    "backgroundColor": "#FFFFFF"
  },
  "makerZip": {
    "icon": "assets/icons/512x512.png"
  },
  "makerSquirrel": {
    "iconUrl": "https://assets/icons/256x256.ico "
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "NODE_ENV=production electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "prepare": "husky install"
  },
  "keywords": [
    "organize",
    "files",
    "manage",
    "manager",
    "folders"
  ],
  "author": {
    "name": "Tom√°s Vidal",
    "email": "tomi_vidal_99@hotmail.com"
  },
  "preload": {
    "js": "./src/preload.ts"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "6.0.3",
    "@electron-forge/maker-deb": "6.0.3",
    "@electron-forge/maker-rpm": "6.0.3",
    "@electron-forge/maker-squirrel": "6.0.3",
    "@electron-forge/maker-zip": "6.0.3",
    "@electron-forge/plugin-webpack": "6.0.3",
    "@iconify/icons-emojione-monotone": "1.2.4",
    "@iconify/icons-game-icons": "1.2.1",
    "@iconify/icons-ic": "1.2.11",
    "@iconify/icons-material-symbols": "1.2.23",
    "@iconify/react": "4.0.0",
    "@iconify/types": "2.0.0",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "@types/react-router": "5.1.19",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "css-loader": "6.0.0",
    "electron": "21.3.1",
    "eslint": "8.35.0",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-import-resolver-webpack": "0.13.2",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "fork-ts-checker-webpack-plugin": "7.2.13",
    "husky": "8.0.3",
    "node-loader": "2.0.0",
    "prettier": "2.8.3",
    "sass": "1.56.1",
    "sass-loader": "13.2.0",
    "style-loader": "3.0.0",
    "ts-loader": "9.2.2",
    "ts-node": "10.0.0",
    "typescript": "4.5.4"
  },
  "dependencies": {
    "@types/auto-launch": "5.0.2",
    "auto-launch": "5.0.5",
    "babel-runtime": "6.26.0",
    "chokidar": "3.5.3",
    "electron-squirrel-startup": "1.0.0",
    "electron-store": "8.1.0",
    "eslint-config-prettier": "8.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-uuid": "2.0.0"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint . --fix",
      "prettier --write"
    ]
  }
}
